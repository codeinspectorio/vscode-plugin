{
  "name": "code-inspector-vscode-plugin",
  "displayName": "Code Inspector VsCode extension",
  "description": "Analyze code for 12+ languages using a powerful static analysis engine.",
  "publisher": "code-inspector",
  "repository": "https://github.com/codeinspectorio/vscode-plugin",
  "icon": "images/logo.png",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.57.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:codiga-vscode-plugin.helloWorld"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Codiga",
        "properties": {
          "codiga.enabled": {
            "type": "boolean",
            "default": true,
            "description": "Enable Codiga Analysis Engine",
            "scope": "application"
          },
          "codiga.api.accessKey": {
            "type": "string",
            "default": "<YOUR-CODE-INSPECTOR-ACCESS-KEY>",
            "description": "Your Code Inspector access key",
            "minLength": 6,
            "maxLength": 20,
            "scope": "application"
          },
          "codiga.api.secretKey": {
            "type": "string",
            "default": "<YOUR-CODE-INSPECTOR-SECRET-KEY>",
            "description": "Your Code Inspector secret key",
            "minLength": 6,
            "maxLength": 20,
            "scope": "application"
          }
        }
      }
    ],
    "commands": [
      {
        "command": "codiga.testAPI",
        "title": "Test Codiga API"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "deploy": "vsce publish --yarn"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.57.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vsce": "^1.93.0",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "@apollo/client": "^3.3.20",
    "cross-fetch": "^3.1.4",
    "graphql": "^15.5.0"
  }
}
