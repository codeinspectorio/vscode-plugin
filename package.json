{
  "name": "code-inspector-vscode-plugin",
  "displayName": "Code Inspector",
  "description": "Analyze code for 12+ languages using a powerful static analysis engine.",
  "publisher": "code-inspector",
  "license": "BSD-2-Clause",
  "author": "Xcoding Labs Inc",
  "repository": {
    "type": "git",
    "url": "https://github.com/codeinspectorio/vscode-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/codeinspectorio/vscode-plugin/issues"
  },
  "icon": "images/logo.png",
  "categories": [
    "Linters",
    "Programming Languages"
  ],
  "keywords": [
    "linters",
    "code analysis",
    "code quality",
    "technical debt",
    "static code analysis",
    "PHP",
    "Python",
    "Ruby",
    "Java",
    "Javascript",
    "Scala",
    "C/C++",
    "React",
    "Typescript"
  ],
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.57.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension",
  "contributes": {
    "configuration": [
      {
        "title": "Code Inspector",
        "properties": {
          "code-inspector.enabled": {
            "type": "boolean",
            "default": true,
            "description": "Enable Codiga Analysis Engine",
            "scope": "application"
          },
          "code-inspector.api.accessKey": {
            "type": "string",
            "default": "<ACCESS-KEY>",
            "description": "Your Code Inspector access key",
            "minLength": 6,
            "maxLength": 20,
            "scope": "application"
          },
          "code-inspector.api.secretKey": {
            "type": "string",
            "default": "<SECRET-KEY>",
            "description": "Your Code Inspector secret key",
            "minLength": 6,
            "maxLength": 20,
            "scope": "application"
          }
        }
      }
    ],
    "commands": [
      {
        "command": "code-inspector.testAPI",
        "title": "Test Code Inspector API"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "deploy": "vsce publish --yarn",
    "vscode:prepublish": "webpack --mode production",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.57.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "ts-loader": "^9.2.3",
    "typescript": "^4.3.2",
    "vsce": "^1.93.0",
    "vscode-test": "^1.5.2",
    "webpack": "^5.39.0",
    "webpack-cli": "^4.7.2"
  },
  "dependencies": {
    "@apollo/client": "^3.3.20",
    "cross-fetch": "^3.1.4",
    "graphql": "^15.5.0"
  }
}
