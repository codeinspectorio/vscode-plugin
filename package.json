{
  "name": "vscode-plugin",
  "displayName": "Codiga Code Snippets",
  "description": "Create and share code snippets for 15+ languages",
  "publisher": "codiga",
  "license": "MIT",
  "author": "Xcoding Labs Inc",
  "repository": {
    "type": "git",
    "url": "https://github.com/codiga/vscode-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/codiga/vscode-plugin/issues"
  },
  "icon": "images/logo.png",
  "categories": [
    "Linters",
    "Snippets",
    "Programming Languages"
  ],
  "keywords": [
    "coding assistant",
    "snippets",
    "linters",
    "code analysis",
    "code quality",
    "technical debt",
    "static code analysis",
    "PHP",
    "Python",
    "Ruby",
    "Java",
    "Javascript",
    "Scala",
    "C/C++",
    "React",
    "Typescript"
  ],
  "version": "0.3.3",
  "engines": {
    "vscode": "^1.57.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Codiga",
        "properties": {
          "codiga.codeAnalysisEnabled": {
            "type": "boolean",
            "default": true,
            "description": "Enable Codiga Code Analysis Engine",
            "scope": "application"
          },
          "codiga.codingAssistantCompletion": {
            "type": "boolean",
            "default": true,
            "description": "Enable Coding Assistant when typing code",
            "scope": "application"
          },
          "codiga.associatedProject": {
            "type": "number",
            "default": 0,
            "description": "Associated project id from Codiga",
            "scope": "resource"
          },
          "codiga.api.token": {
            "type": "string",
            "default": "<API-TOKEN>",
            "description": "Your Codiga API Token (Preferred authentication method)",
            "minLength": 32,
            "maxLength": 50,
            "scope": "application"
          }
        }
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "codiga.recipeCreate",
          "group": "z_commands"
        }
      ]
    },
    "commands": [
      {
        "category": "Codiga",
        "command": "codiga.testAPI",
        "title": "Test API connection"
      },
      {
        "category": "Codiga",
        "command": "codiga.recipeUse",
        "title": "Codiga use recipe"
      },
      {
        "category": "Codiga",
        "command": "codiga.recipeCreate",
        "title": "Create Codiga Recipe"
      },
      {
        "category": "Codiga",
        "command": "codiga.configureAssociatedProject",
        "title": "Configure Associated Project"
      },
      {
        "category": "Codiga",
        "command": "codiga.getAssociatedProject",
        "title": "Show associated project"
      }
    ],
    "keybindings": [
      {
        "command": "codiga.recipeUse",
        "key": "ctrl+alt+C",
        "mac": "shift+cmd+C"
      },
      {
        "command": "codiga.listShortcuts",
        "key": "ctrl+alt+S",
        "mac": "shift+cmd+S"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "lint-fix": "eslint src --ext ts --fix",
    "test": "node ./out/test/runTest.js",
    "deploy": "vsce publish --no-yarn",
    "vscode:prepublish": "npm run -S esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run -S esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run -S esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^8.2.3",
    "@types/node": "^14.18.12",
    "@types/vscode": "^1.57.0",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "@vscode/test-electron": "^2.1.2",
    "esbuild": "^0.14.17",
    "eslint": "^7.32.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.1",
    "sinon": "^12.0.1",
    "typescript": "^4.5.5",
    "vsce": "^2.6.7"
  },
  "dependencies": {
    "@types/sinon": "^10.0.11",
    "graphql": "^15.8.0",
    "graphql-request": "^3.7.0"
  }
}
