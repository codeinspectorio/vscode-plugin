{
  "name": "code-inspector-vscode-plugin",
  "displayName": "Code Inspector",
  "description": "Analyze code for 12+ languages using a powerful static analysis engine.",
  "publisher": "code-inspector",
  "license": "MIT",
  "author": "Xcoding Labs Inc",
  "repository": {
    "type": "git",
    "url": "https://github.com/codeinspectorio/vscode-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/codeinspectorio/vscode-plugin/issues"
  },
  "icon": "images/logo.png",
  "categories": [
    "Linters",
    "Programming Languages"
  ],
  "keywords": [
    "linters",
    "code analysis",
    "code quality",
    "technical debt",
    "static code analysis",
    "PHP",
    "Python",
    "Ruby",
    "Java",
    "Javascript",
    "Scala",
    "C/C++",
    "React",
    "Typescript"
  ],
  "version": "0.1.2",
  "engines": {
    "vscode": "^1.57.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Code Inspector",
        "properties": {
          "code-inspector.enabled": {
            "type": "boolean",
            "default": true,
            "description": "Enable Code Inspector Analysis Engine",
            "scope": "application"
          },
          "code-inspector.associatedProject": {
            "type": "number",
            "default": 0,
            "description": "Associated project id from Code Inspector",
            "scope": "resource"
          },
          "code-inspector.api.token": {
            "type": "string",
            "default": "<API-TOKEN>",
            "description": "Your Code Inspector API Token (Preferred authentication method)",
            "minLength": 32,
            "maxLength": 50,
            "scope": "application"
          },
          "code-inspector.api.accessKey": {
            "type": "string",
            "default": "<ACCESS-KEY>",
            "description": "Your Code Inspector access key (old authentication method, deprecated)",
            "minLength": 6,
            "maxLength": 20,
            "scope": "application"
          },
          "code-inspector.api.secretKey": {
            "type": "string",
            "default": "<SECRET-KEY>",
            "description": "Your Code Inspector secret key (old authentication method, deprecated)",
            "minLength": 6,
            "maxLength": 20,
            "scope": "application"
          }
        }
      }
    ],
    "commands": [
      {
        "category": "Code Inspector",
        "command": "code-inspector.testAPI",
        "title": "Test API connection"
      },
      {
        "category": "Codiga",
        "command": "codiga.recipe",
        "title": "Use recipe"
      },
      {
        "category": "Code Inspector",
        "command": "code-inspector.configureAssociatedProject",
        "title": "Configure Associated Project"
      },
      {
        "category": "Code Inspector",
        "command": "code-inspector.getAssociatedProject",
        "title": "Show associated project"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "deploy": "vsce publish --no-yarn",
    "vscode:prepublish": "npm run -S esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run -S esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run -S esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.57.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "esbuild": "^0.12.9",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vsce": "^1.93.0",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "graphql": "^15.5.0",
    "graphql-request": "^3.4.0"
  }
}
